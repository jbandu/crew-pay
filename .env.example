# Neon Postgres Configuration
# Get your connection string from https://neon.tech
# Format: postgresql://[user]:[password]@[endpoint]/[database]?sslmode=require

# Connection pooled URL (use this for application queries)
DATABASE_URL="postgresql://user:password@ep-xxx-xxx.us-east-2.aws.neon.tech/crew_copilot_production?sslmode=require&pgbouncer=true&connect_timeout=15"

# Direct connection URL (use this for migrations)
DIRECT_URL="postgresql://user:password@ep-xxx-xxx.us-east-2.aws.neon.tech/crew_copilot_production?sslmode=require&connect_timeout=15"

# Shadow database for Prisma migrations (optional, recommended for production)
SHADOW_DATABASE_URL="postgresql://user:password@ep-xxx-xxx.us-east-2.aws.neon.tech/crew_copilot_shadow?sslmode=require"

# Neo4j Configuration
# Get your Neo4j Aura instance from https://neo4j.com/cloud/aura/
NEO4J_URI="neo4j+s://xxx.databases.neo4j.io"
NEO4J_USER="neo4j"
NEO4J_PASSWORD="your-password-here"
NEO4J_DATABASE="neo4j"

# Application Configuration
NODE_ENV="development"
PORT=3000

# Service Role Key (for RLS bypass in admin operations)
SERVICE_ROLE_KEY="your-service-role-key-here"

# AI Agent Configuration
AI_AGENT_USER_ID="ai-agent-service-account"
